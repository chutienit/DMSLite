<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rela_transaction_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgblack60"
        android:orientation="vertical">

        <com.vietdms.mobile.dmslauncher.CustomView.LoadingView
            android:id="@+id/TransactionLineLoadingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/margin_top"
            app:lv_color="@android:color/white"
            app:lv_loading="false"
            app:lv_title="@string/load_transaction">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:elevation="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_dark_border_line"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/ref_transaction_name_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:gravity="left"
                                    android:minWidth="40dp"
                                    android:text="KH 01"
                                    android:textSize="@dimen/textFontSize3"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/ref_transaction_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="7 Go Cam Dem, P.10, Q. Tan Binh, HCM, JLKÁD FLÁ FSAL FDSL "
                                    android:textSize="@dimen/textFontSize3" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/time"
                                    android:textSize="@dimen/textFontSize3" />

                                <TextView
                                    android:id="@+id/ref_transaction_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="5dp"
                                    android:text="20/10/2016"
                                    android:textSize="@dimen/textFontSize3" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/phone"
                                    android:textSize="@dimen/textFontSize3" />

                                <TextView
                                    android:id="@+id/ref_transaction_phone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="5dp"
                                    android:text="0919.001.404"
                                    android:textSize="@dimen/textFontSize3" />

                                <TextView
                                    android:id="@+id/ref_transaction_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="@string/sended"
                                    android:textSize="@dimen/textFontSize3"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/note" />

                                <TextView
                                    android:id="@+id/ref_transaction_note"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="5dp"
                                    android:text="Khach can lay hang gap"
                                    android:textSize="@dimen/textFontSize3"
                                    android:textStyle="bold" />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_bolder_order"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/ref_transaction_phonecall"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignParentTop="true"
                            android:layout_weight="3"
                            android:background="@color/background_material_light"
                            android:drawableLeft="@drawable/phone_btn"
                            android:text="@string/makephone"
                            android:textAllCaps="false"
                            android:textSize="@dimen/textFontSize3" />

                        <Button
                            android:id="@+id/ref_transaction_map"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignParentTop="true"
                            android:layout_weight="3"
                            android:background="@color/background_material_light"
                            android:drawableLeft="@drawable/manager_btn"
                            android:text="@string/title_activity_maps"
                            android:textAllCaps="false"
                            android:textSize="@dimen/textFontSize3" />


                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_transaction_check_in"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:background="@color/background_material_light"
                        android:drawableLeft="@drawable/customer_btn"
                        android:maxHeight="50dp"
                        android:padding="2sp"
                        android:text="@string/check_in_customer"
                        android:textAllCaps="false"
                        android:textSize="@dimen/textFontSize3" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/btn_transaction_Note"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:background="@color/background_material_light"
                        android:drawableLeft="@drawable/gmail_btn"
                        android:maxHeight="50dp"
                        android:padding="2sp"
                        android:text="@string/check_out"
                        android:textAllCaps="false"
                        android:textSize="@dimen/textFontSize3" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/btn_transaction_Write"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:background="@color/background_material_light"
                        android:drawableLeft="@drawable/edit_btn"
                        android:maxHeight="50dp"
                        android:padding="2sp"
                        android:text="@string/check_in_title"
                        android:textAllCaps="false"
                        android:textSize="@dimen/textFontSize3" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_floating_material_light"
                    android:minHeight="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/transation_viewdetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_dark_border_line"
                        android:text="@string/transaction_detail"
                        android:textSize="@dimen/textFontSize3"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/blue_light" />
                    <!--<android.support.v4.widget.SwipeRefreshLayout-->
                    <!--android:id="@+id/swipe_transactionline"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent">-->


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerTransactionLine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0sp"
                        android:clipToPadding="false"
                        android:minHeight="100dp" />


                    <!--</android.support.v4.widget.SwipeRefreshLayout>-->
                </LinearLayout>
            </LinearLayout>
        </com.vietdms.mobile.dmslauncher.CustomView.LoadingView>
    </RelativeLayout>
</layout>
