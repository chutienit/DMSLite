<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:numlock="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:padding="0dp"
    numlock:cols="3"
    numlock:horizontalSpacing="7dp"
    numlock:maxHScale="1.2"
    numlock:maxVScale="1.2"
    numlock:maxWidth="400dp"
    numlock:rows="4"
    numlock:verticalSpacing="7dp">

    <LinearLayout
        android:id="@+id/passwordView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher" />
                android:foregroundGravity="center"
                android:src="@drawable/ic_launcher" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ImageButton
                android:id="@+id/request_unlock_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="@null"
                android:src="@drawable/request_unlock_btn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"></LinearLayout>

            <EditText
                android:id="@+id/ed_pass_lock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dip"
                android:background="@drawable/bglockedit"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:textColor="@android:color/white"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/numlock_b1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_button_lock"
                    android:gravity="center"
                    android:padding="0px"
                    android:text="@string/num1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/locker_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/numlock_b2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_button_lock"
                    android:gravity="center"
                    android:padding="0px"
                    android:text="@string/num2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/locker_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/numlock_b3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_button_lock"
                    android:gravity="center"
                    android:padding="0px"
                    android:text="@string/num3"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/locker_button_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/numlock_b4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_button_lock"
                    android:gravity="center"
                    android:padding="0px"
                    android:text="@string/num4"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/locker_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/numlock_b5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_button_lock"
                    android:gravity="center"
                    android:padding="0px"
                    android:text="@string/num5"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/locker_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/numlock_b6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_button_lock"
                    android:gravity="center"
                    android:padding="0px"
                    android:text="@string/num6"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/locker_button_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/numlock_b7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_button_lock"
                    android:gravity="center"
                    android:padding="0px"
                    android:text="@string/num7"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/locker_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/numlock_b8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_button_lock"
                    android:gravity="center"
                    android:padding="0px"
                    android:text="@string/num8"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/locker_button_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/numlock_b9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_button_lock"
                    android:gravity="center"
                    android:padding="0px"
                    android:text="@string/num9"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/locker_button_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/numlock_bLeft"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_button_lock"
                    android:gravity="center"
                    android:padding="0px"
                    android:src="@drawable/ic_action_cancel"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/numlock_b0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_button_lock"
                    android:gravity="center"
                    android:padding="0px"
                    android:text="@string/num0"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/locker_button_text_size"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/numlock_bRight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1px"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_button_lock"
                    android:gravity="center"
                    android:padding="0px"
                    android:src="@drawable/ic_action_accept"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>