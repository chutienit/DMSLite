<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/linear_list_gcm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="@string/list_gcm"
            android:textColor="@color/colorBlueDark"
            android:textSize="16sp"
            android:textStyle="bold" />


        <com.vietdms.mobile.dmslauncher.CustomView.LoadingView xmlns:app="http://schemas.android.com/tools"
            android:id="@+id/ListGCMLoadingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:lv_color="@android:color/black"
            app:lv_loading="false"
            app:lv_title="@string/loading">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerGCM"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </android.support.v7.widget.RecyclerView>
        </com.vietdms.mobile.dmslauncher.CustomView.LoadingView>
    </LinearLayout>
</layout>
