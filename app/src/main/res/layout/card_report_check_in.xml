<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_report_check_in"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:padding="0dp"
        >

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="@string/employee"
            android:textSize="@dimen/textFontSize2" />
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:maxLines="2"
            android:text="@string/store"
            android:textSize="@dimen/textFontSize2" />
        <View
            android:layout_width="1dp"

            android:layout_marginLeft="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/black" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:maxLines="2"
            android:text="@string/smaller15"
            android:textSize="@dimen/textFontSize" />
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="1dp"
            android:background="@android:color/black" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:maxLines="2"
            android:text="@string/bigger15"
            android:textSize="@dimen/textFontSize" />
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@android:color/black" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:maxLines="2"
            android:text="@string/order"
            android:textSize="@dimen/textFontSize" />
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@android:color/black" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingRight="5dp"
            android:text="@string/sales"
            android:textSize="@dimen/textFontSize2" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cvsp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/minHeight"
        android:clickable="true"
        card_view:cardBackgroundColor="@drawable/button_drawable"
        card_view:cardUseCompatPadding="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="30dp"
            android:background="@drawable/button_drawable"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/report_employee"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:maxLines="2"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dp"
                android:text="Pham Huy Cuong"
                android:textSize="@dimen/textFontSize2" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@android:color/darker_gray" />
            <TextView
                android:id="@+id/report_store_amout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/textFontSize2" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@android:color/darker_gray" />
            <TextView
                android:id="@+id/report_smaller_15_minute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/textFontSize2" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@android:color/darker_gray" />
            <TextView
                android:id="@+id/report_bigger_15_minute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/textFontSize2" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@android:color/darker_gray" />
            <TextView
                android:id="@+id/report_order_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/textFontSize2" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@android:color/darker_gray" />
            <TextView
                android:id="@+id/report_sales_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="right|center_vertical"
                android:paddingRight="5dp"
                android:textSize="@dimen/textFontSize2" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />


    </android.support.v7.widget.CardView>
</LinearLayout>