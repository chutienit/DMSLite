<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvpd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true"
        android:elevation="1dp"
        card_view:cardUseCompatPadding="true"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/minHeight"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:paddingLeft="2sp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageTimeLine"
        android:layout_width="wrap_content"
        android:src="@drawable/noavatar_btn"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_bg_main"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:minHeight="60dp"
        android:minWidth="60dp" />

</RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/nameTimeline"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Gió"
                        android:textSize="@dimen/textFontSize3"
                        android:textStyle="bold"
                        android:maxLines="2" />

                    <TextView
                        android:id="@+id/timeTimeLine"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/distanceTimeLine"
                        android:layout_toRightOf="@+id/nameTimeline"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="5dp"
                        android:text="23 phút trước"
                        android:textSize="@dimen/textFontSize"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/distanceTimeLine"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical|right"
                        android:paddingRight="5dp"
                        android:text="100 m"
                        android:textColor="@color/bpRed"
                        android:textSize="@dimen/textFontSize3"
                        android:minWidth="60sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/actionTimeLine"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="right"
                        android:paddingLeft="5dp"
                        android:text="Ghé thăm :"
                        android:textSize="@dimen/textFontSize3" />

                    <TextView
                        android:id="@+id/customerTimeLine"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/actionTimeLine"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:text="Công ty Google VietNam"
                        android:textSize="@dimen/textFontSize3"
                        android:maxLines="1" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/addressTimeLine"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/textFontSize3"
                    android:text="7 Gò Cẩm Đệm, Phường 10, Quận Tân Bình"
                    android:maxLines="2" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>