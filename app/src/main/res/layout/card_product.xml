<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/darker_gray"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvpd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:clickable="true"
        android:elevation="1dp"
        android:padding="5dp"
        card_view:cardUseCompatPadding="true"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/product_stt"
                        android:layout_width="@dimen/minHeight"
                        android:layout_height="@dimen/minHeight"
                        android:layout_gravity="center_vertical|center_horizontal"
                        app:civ_border_color="@android:color/darker_gray"
                        app:civ_border_width="1dp" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="2sp">
                        <TextView
                            android:id="@+id/product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="Red Bull"
                            android:textSize="@dimen/textFontSize3"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/product_no"
                            android:textSize="@dimen/textFontSize3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SP01"
                            android:gravity="right"
                            android:layout_margin="3sp" />
                        <TextView
                            android:id="@+id/product_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textFontSize3"
                            android:text="Lon"/>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/product_price"
                        android:textSize="@dimen/textFontSize3"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/textFontSize3"
                        android:text="100.000 VNĐ"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/txtInventoryEmployee"
                android:layout_width="wrap_content"
                android:paddingRight="5dp"
                android:textColor="@color/bpRed"
                android:gravity="right"
                android:layout_height="wrap_content" />



        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>