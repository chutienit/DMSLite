<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:drawableLeft="@drawable/triagle_btn"
            android:gravity="left|top"
            android:textSize="@dimen/textFontSize4"
            android:id="@+id/nameStaff"
            android:textColor="@color/bpTransparent_black"
            android:text="@string/staff_list"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/paddingSpinner" />
        <LinearLayout
            android:id="@+id/linearSpinner"
            android:layout_below="@+id/nameStaff"
            android:layout_width="match_parent"
            android:gravity="top"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/timeStaff"
                android:minWidth="50dp"
                android:textColor="@color/bpTransparent_black"
                android:textSize="@dimen/textFontSize2"
                android:gravity="center_vertical|top"
                android:layout_width="wrap_content"
                android:layout_marginRight="1sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/bateryStaff"
                android:paddingLeft="1dp"
                android:minWidth="25dp"
                android:textColor="@color/bpTransparent_black"
                android:textSize="@dimen/textFontSize2"
                android:gravity="center_vertical|top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/imageAir"
                android:layout_weight="1"
                android:gravity="center_vertical|top"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageNet"
                android:gravity="center_vertical|top"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageGPS"
                android:gravity="center_vertical|top"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:id="@+id/borderbot"
            android:layout_below="@+id/linearSpinner"
            android:background="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>
    </RelativeLayout>

</RelativeLayout>